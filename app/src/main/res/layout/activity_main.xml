<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_weight="3"
        android:layout_width="fill_parent"
        android:background="#dedede"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="5dp"
        android:gravity="right|center"
        android:textSize="100dp"
        ></TextView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10px"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:text="CE" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="C" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#dedede"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:textSize="25dp"
            android:text="BS" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="/" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10px"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:text="7" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:textSize="25dp"
            android:text="9" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="x" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10px"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:text="4" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="5" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:textSize="25dp"
            android:text="6" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10px"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:text="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#efefef"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:textSize="25dp"
            android:text="3" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10px"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:text="+/-" />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="0" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#efefef"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10px"
            android:textSize="25dp"
            android:text="." />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:backgroundTint="#dedede"
            android:textSize="25dp"
            android:layout_marginHorizontal="10px"
            android:textColor="@color/black"
            android:text="=" />
    </LinearLayout>

</LinearLayout>
